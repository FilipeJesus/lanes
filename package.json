{
  "name": "claude-lanes",
  "displayName": "Lanes: AI Project Management",
  "publisher": "FilipeMarquesJesus",
  "description": "Manage parallel Claude Code sessions via Git Worktrees",
  "version": "0.10.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FilipeJesus/lanes"
  },
  "homepage": "https://github.com/FilipeJesus/lanes#readme",
  "bugs": {
    "url": "https://github.com/FilipeJesus/lanes/issues"
  },
  "keywords": [
    "claude",
    "ai",
    "worktree",
    "git",
    "parallel",
    "sessions",
    "anthropic"
  ],
  "icon": "media/lanes-default-128px.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.bundle.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lanes-sidebar",
          "title": "Lanes",
          "icon": "media/lanes-mono-transparent.svg"
        }
      ]
    },
    "views": {
      "lanes-sidebar": [
        {
          "type": "webview",
          "id": "claudeSessionFormView",
          "name": "New Session",
          "icon": "$(add)"
        },
        {
          "id": "claudeSessionsView",
          "name": "Active Sessions",
          "icon": "$(list-tree)"
        },
        {
          "id": "previousSessionsView",
          "name": "Previous Sessions",
          "icon": "$(history)"
        },
        {
          "id": "workflowsView",
          "name": "Workflows",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeWorktrees.createSession",
        "title": "New Session",
        "icon": "$(plus)"
      },
      {
        "command": "claudeWorktrees.deleteSession",
        "title": "Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "claudeWorktrees.openSession",
        "title": "Open Session"
      },
      {
        "command": "claudeWorktrees.setupStatusHooks",
        "title": "Setup Status Hooks",
        "icon": "$(gear)"
      },
      {
        "command": "claudeWorktrees.showGitChanges",
        "title": "Show Git Changes",
        "icon": "$(git-compare)"
      },
      {
        "command": "claudeWorktrees.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(multiple-windows)"
      },
      {
        "command": "claudeWorktrees.openPreviousSessionPrompt",
        "title": "Open Session Prompt",
        "icon": "$(file)"
      },
      {
        "command": "lanes.createWorkflow",
        "title": "Lanes: Create Workflow Template",
        "icon": "$(add)"
      },
      {
        "command": "lanes.validateWorkflow",
        "title": "Lanes: Validate Workflow Template",
        "icon": "$(check)"
      },
      {
        "command": "lanes.repairBrokenWorktrees",
        "title": "Lanes: Repair Broken Worktrees",
        "icon": "$(wrench)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lanes.createWorkflow",
          "when": "view == workflowsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claudeWorktrees.openInNewWindow",
          "when": "view == claudeSessionsView && viewItem == sessionItem",
          "group": "inline@0"
        },
        {
          "command": "claudeWorktrees.showGitChanges",
          "when": "view == claudeSessionsView && viewItem == sessionItem",
          "group": "inline@1"
        },
        {
          "command": "claudeWorktrees.setupStatusHooks",
          "when": "view == claudeSessionsView",
          "group": "navigation"
        },
        {
          "command": "claudeWorktrees.deleteSession",
          "when": "view == claudeSessionsView",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claudeWorktrees.createSession",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Lanes: General",
        "properties": {
          "lanes.worktreesFolder": {
            "type": "string",
            "default": ".worktrees",
            "description": "Folder name where session worktrees are created (relative to repository root). Default: .worktrees",
            "order": 1
          },
          "lanes.promptsFolder": {
            "type": "string",
            "default": "",
            "description": "Folder where session starting prompts are stored. Leave empty (default) to use VS Code's global storage (keeps repo clean). Set a path like '.claude/lanes' for repo-relative storage.",
            "order": 2
          }
        }
      },
      {
        "title": "Lanes: Git",
        "properties": {
          "lanes.baseBranch": {
            "type": "string",
            "default": "",
            "description": "Branch to compare against when viewing changes. Leave empty for auto-detection (tries origin/main, origin/master, main, master)",
            "order": 1
          },
          "lanes.includeUncommittedChanges": {
            "type": "boolean",
            "default": true,
            "description": "Show uncommitted changes (staged and unstaged) when viewing session changes. Default: enabled",
            "order": 2
          }
        }
      },
      {
        "title": "Lanes: Advanced",
        "properties": {
          "lanes.useGlobalStorage": {
            "type": "boolean",
            "default": true,
            "description": "Store session tracking files in VS Code's storage instead of worktree folders. Keeps worktrees cleaner but files are hidden from version control. Default: enabled",
            "order": 1
          },
          "lanes.claudeSessionPath": {
            "type": "string",
            "default": "",
            "description": "Relative path for .claude-session file within each worktree. Only used when Use Global Storage is disabled. Leave empty for worktree root",
            "order": 2
          },
          "lanes.claudeStatusPath": {
            "type": "string",
            "default": "",
            "description": "Relative path for .claude-status file within each worktree. Only used when Use Global Storage is disabled. Leave empty for worktree root",
            "order": 3
          }
        }
      },
      {
        "title": "Lanes: Workflows",
        "properties": {
          "lanes.workflowsEnabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable workflow template selection when creating sessions",
            "order": 1
          },
          "lanes.workflowsFolder": {
            "type": "string",
            "default": ".claude/workflows",
            "description": "Workspace folder for built-in workflow templates",
            "order": 2
          },
          "lanes.customWorkflowsFolder": {
            "type": "string",
            "default": ".claude/lanes/workflows",
            "description": "Workspace folder for custom workflow templates (relative to workspace root)",
            "order": 3
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run bundle:extension && npm run bundle:mcp",
    "bundle:extension": "node scripts/bundle-extension.mjs",
    "bundle:mcp": "node scripts/bundle-mcp.mjs",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "ovsx": "^0.10.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "yaml": "^2.8.2"
  }
}
