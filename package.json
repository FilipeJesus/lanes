{
  "name": "lanes",
  "displayName": "Lanes: AI Project Management",
  "publisher": "FilipeMarquesJesus",
  "description": "Manage parallel Claude Code sessions via Git Worktrees",
  "version": "1.3.3",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FilipeJesus/lanes"
  },
  "homepage": "https://github.com/FilipeJesus/lanes#readme",
  "bugs": {
    "url": "https://github.com/FilipeJesus/lanes/issues"
  },
  "keywords": [
    "claude",
    "ai",
    "worktree",
    "git",
    "parallel",
    "sessions",
    "anthropic"
  ],
  "icon": "media/lanes-default-128px.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.bundle.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lanes-sidebar",
          "title": "Lanes",
          "icon": "media/lanes-mono-transparent.svg"
        }
      ]
    },
    "views": {
      "lanes-sidebar": [
        {
          "type": "webview",
          "id": "lanesSessionFormView",
          "name": "New Session",
          "icon": "$(add)"
        },
        {
          "id": "lanesSessionsView",
          "name": "Active Sessions",
          "icon": "$(list-tree)"
        },
        {
          "id": "previousSessionsView",
          "name": "Previous Sessions",
          "icon": "$(history)"
        },
        {
          "id": "workflowsView",
          "name": "Workflows",
          "icon": "$(symbol-event)"
        }
      ]
    },
    "commands": [
      {
        "command": "lanes.createSession",
        "title": "New Session",
        "icon": "$(plus)"
      },
      {
        "command": "lanes.deleteSession",
        "title": "Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "lanes.openSession",
        "title": "Open Session"
      },
      {
        "command": "lanes.setupStatusHooks",
        "title": "Setup Status Hooks",
        "icon": "$(gear)"
      },
      {
        "command": "lanes.showGitChanges",
        "title": "Show Git Changes",
        "icon": "$(git-compare)"
      },
      {
        "command": "lanes.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(multiple-windows)"
      },
      {
        "command": "lanes.openPreviousSessionPrompt",
        "title": "Open Session Prompt",
        "icon": "$(file)"
      },
      {
        "command": "lanes.createWorkflow",
        "title": "Lanes: Create Workflow Template",
        "icon": "$(add)"
      },
      {
        "command": "lanes.validateWorkflow",
        "title": "Lanes: Validate Workflow Template",
        "icon": "$(check)"
      },
      {
        "command": "lanes.repairBrokenWorktrees",
        "title": "Lanes: Repair Broken Worktrees",
        "icon": "$(wrench)"
      },
      {
        "command": "lanes.enableChime",
        "title": "Enable Chime",
        "icon": "$(bell)"
      },
      {
        "command": "lanes.disableChime",
        "title": "Disable Chime",
        "icon": "$(bell-slash)"
      },
      {
        "command": "lanes.testChime",
        "title": "Lanes: Test Chime"
      },
      {
        "command": "lanes.clearSession",
        "title": "Clear Session",
        "icon": "$(refresh)"
      },
      {
        "command": "lanes.createTerminal",
        "title": "Create Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "lanes.searchInWorktree",
        "title": "Search in Worktree",
        "icon": "$(search)"
      },
      {
        "command": "lanes.openWorkflowState",
        "title": "Open Workflow State",
        "icon": "$(eye)"
      },
      {
        "command": "lanes.generateInsights",
        "title": "Generate Insights",
        "icon": "$(graph)"
      },
      {
        "command": "lanes.pinSession",
        "title": "Pin Session",
        "icon": "$(pin)"
      },
      {
        "command": "lanes.unpinSession",
        "title": "Unpin Session",
        "icon": "$(pinned)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lanes.createWorkflow",
          "when": "view == workflowsView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "lanes.openInNewWindow",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "inline@0"
        },
        {
          "command": "lanes.showGitChanges",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "inline@1"
        },
        {
          "command": "lanes.openWorkflowState",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "inline@2"
        },
        {
          "command": "lanes.searchInWorktree",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "inline@3"
        },
        {
          "command": "lanes.pinSession",
          "when": "view == lanesSessionsView && viewItem == sessionItem",
          "group": "inline@4"
        },
        {
          "command": "lanes.unpinSession",
          "when": "view == lanesSessionsView && viewItem == sessionItemPinned",
          "group": "inline@4"
        },
        {
          "command": "lanes.setupStatusHooks",
          "when": "view == lanesSessionsView",
          "group": "navigation"
        },
        {
          "command": "lanes.deleteSession",
          "when": "view == lanesSessionsView",
          "group": "inline"
        },
        {
          "command": "lanes.enableChime",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/ && !lanes.chimeEnabled",
          "group": "navigation"
        },
        {
          "command": "lanes.disableChime",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/ && lanes.chimeEnabled",
          "group": "navigation"
        },
        {
          "command": "lanes.clearSession",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/"
        },
        {
          "command": "lanes.createTerminal",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "navigation"
        },
        {
          "command": "lanes.generateInsights",
          "when": "view == lanesSessionsView && viewItem =~ /^sessionItem/",
          "group": "insights"
        },
        {
          "command": "lanes.pinSession",
          "when": "view == lanesSessionsView && viewItem == sessionItem",
          "group": "pin"
        },
        {
          "command": "lanes.unpinSession",
          "when": "view == lanesSessionsView && viewItem == sessionItemPinned",
          "group": "pin"
        }
      ]
    },
    "keybindings": [
      {
        "command": "lanes.createSession",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": [
      {
        "title": "Lanes: General",
        "properties": {
          "lanes.worktreesFolder": {
            "type": "string",
            "default": ".worktrees",
            "description": "Folder name where session worktrees are created (relative to repository root). Default: .worktrees",
            "order": 1
          },
          "lanes.promptsFolder": {
            "type": "string",
            "default": "",
            "description": "Folder where session starting prompts are stored. Leave empty (default) to use VS Code's global storage (keeps repo clean). Set a path like '.lanes' for repo-relative storage.",
            "order": 2
          },
          "lanes.defaultAgent": {
            "type": "string",
            "enum": [
              "claude",
              "codex",
              "cortex",
              "gemini",
              "opencode"
            ],
            "enumDescriptions": [
              "Claude Code - AI coding assistant by Anthropic",
              "Codex CLI - AI coding assistant by OpenAI (requires codex CLI)",
              "Cortex Code - AI coding assistant by Snowflake (requires cortex CLI)",
              "Gemini CLI - AI coding assistant by Google (requires gemini CLI)",
              "OpenCode - Open source AI coding agent (requires opencode CLI)"
            ],
            "default": "claude",
            "description": "Default code agent for new sessions",
            "order": 3
          }
        }
      },
      {
        "title": "Lanes: Git",
        "properties": {
          "lanes.baseBranch": {
            "type": "string",
            "default": "",
            "description": "Branch to compare against when viewing changes. Leave empty for auto-detection (tries origin/main, origin/master, main, master)",
            "order": 1
          },
          "lanes.includeUncommittedChanges": {
            "type": "boolean",
            "default": true,
            "description": "Show uncommitted changes (staged and unstaged) when viewing session changes. Default: enabled",
            "order": 2
          }
        }
      },
      {
        "title": "Lanes: Advanced",
        "properties": {
          "lanes.useGlobalStorage": {
            "type": "boolean",
            "default": true,
            "description": "Store session tracking files in VS Code's global storage. When enabled, files are stored in VS Code storage. When disabled, files are stored in .lanes/session_management/ at the repository root. Default: enabled",
            "order": 1
          },
          "lanes.localSettingsPropagation": {
            "type": "string",
            "enum": [
              "copy",
              "symlink",
              "disabled"
            ],
            "enumDescriptions": [
              "Copy settings.local.json to each worktree",
              "Create symlink to settings.local.json in each worktree",
              "Do not propagate settings.local.json"
            ],
            "default": "copy",
            "description": "How to propagate .claude/settings.local.json to worktrees. Ensures your local Claude Code configuration is available in all sessions.",
            "order": 2
          }
        }
      },
      {
        "title": "Lanes: Workflows",
        "properties": {
          "lanes.workflowsEnabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable workflow template selection when creating sessions",
            "order": 1
          },
          "lanes.customWorkflowsFolder": {
            "type": "string",
            "default": ".lanes/workflows",
            "description": "Workspace folder for custom workflow templates (relative to workspace root)",
            "order": 2
          }
        }
      },
      {
        "title": "Lanes: Audio",
        "properties": {
          "lanes.chimeSound": {
            "type": "string",
            "enum": [
              "chime",
              "alarm",
              "level-up",
              "notification"
            ],
            "default": "chime",
            "description": "Audio notification sound for session status changes (Note: You must reload VS Code for this to take effect).",
            "enumDescriptions": [
              "Classic chime sound",
              "Alert alarm sound",
              "Achievement level-up sound",
              "Gentle notification sound"
            ],
            "order": 1
          }
        }
      },
      {
        "title": "Lanes: Status Polling",
        "properties": {
          "lanes.polling.quietThresholdMs": {
            "type": "number",
            "default": 3000,
            "minimum": 500,
            "maximum": 60000,
            "description": "Time in milliseconds with no session log activity before status changes to 'waiting for user input'. Applies to agents without hook support (OpenCode, Codex).",
            "order": 1
          }
        }
      },
      {
        "title": "Lanes: Terminal",
        "properties": {
          "lanes.terminalMode": {
            "type": "string",
            "enum": [
              "vscode",
              "tmux"
            ],
            "enumDescriptions": [
              "Use VS Code integrated terminals (default)",
              "Use tmux sessions (requires tmux to be installed)"
            ],
            "default": "vscode",
            "description": "Terminal backend for Claude sessions. Use 'vscode' for integrated terminals or 'tmux' for persistent tmux sessions.",
            "order": 1
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run bundle:extension && npm run bundle:mcp",
    "bundle:extension": "node scripts/bundle-extension.mjs",
    "bundle:mcp": "node scripts/bundle-mcp.mjs",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky",
    "changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "memfs": "^4.56.10",
    "ovsx": "^0.10.2",
    "sinon": "^21.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "chokidar": "^4.0.3",
    "yaml": "^2.8.2"
  },
  "overrides": {
    "uri-js": {
      ".": "4.4.1",
      "punycode": "npm:punycode.js@2.3.1"
    }
  },
  "// Punycode override notes": "Use punycode.js instead of deprecated Node.js punycode module. Required by uri-js (transitive dependency via eslint->ajv)."
}
