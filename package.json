{
  "name": "claude-lanes",
  "displayName": "Claude Lanes",
  "publisher": "FilipeMarquesJesus",
  "description": "Manage parallel Claude Code sessions via Git Worktrees",
  "version": "0.7.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FilipeJesus/claude-lanes"
  },
  "homepage": "https://github.com/FilipeJesus/claude-lanes#readme",
  "bugs": {
    "url": "https://github.com/FilipeJesus/claude-lanes/issues"
  },
  "keywords": [
    "claude",
    "ai",
    "worktree",
    "git",
    "parallel",
    "sessions",
    "anthropic"
  ],
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-lanes-sidebar",
          "title": "Claude Lanes",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "claude-lanes-sidebar": [
        {
          "type": "webview",
          "id": "claudeSessionFormView",
          "name": "New Session",
          "icon": "$(add)"
        },
        {
          "id": "claudeSessionsView",
          "name": "Active Sessions",
          "icon": "$(list-tree)"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeWorktrees.createSession",
        "title": "New Session",
        "icon": "$(plus)"
      },
      {
        "command": "claudeWorktrees.deleteSession",
        "title": "Delete Session",
        "icon": "$(trash)"
      },
      {
        "command": "claudeWorktrees.openSession",
        "title": "Open Session"
      },
      {
        "command": "claudeWorktrees.setupStatusHooks",
        "title": "Setup Status Hooks",
        "icon": "$(gear)"
      },
      {
        "command": "claudeWorktrees.showGitChanges",
        "title": "Show Git Changes",
        "icon": "$(git-compare)"
      },
      {
        "command": "claudeWorktrees.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(multiple-windows)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "claudeWorktrees.openInNewWindow",
          "when": "view == claudeSessionsView && viewItem == sessionItem",
          "group": "inline@0"
        },
        {
          "command": "claudeWorktrees.showGitChanges",
          "when": "view == claudeSessionsView && viewItem == sessionItem",
          "group": "inline@1"
        },
        {
          "command": "claudeWorktrees.setupStatusHooks",
          "when": "view == claudeSessionsView",
          "group": "navigation"
        },
        {
          "command": "claudeWorktrees.deleteSession",
          "when": "view == claudeSessionsView",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claudeWorktrees.createSession",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Claude Lanes",
      "properties": {
        "claudeLanes.featuresJsonPath": {
          "type": "string",
          "default": "",
          "description": "Relative path within each worktree where features.json should be stored. Leave empty to use the worktree root."
        },
        "claudeLanes.testsJsonPath": {
          "type": "string",
          "default": "",
          "description": "Relative path within each worktree where tests.json should be stored. Leave empty to use the worktree root."
        },
        "claudeLanes.claudeSessionPath": {
          "type": "string",
          "default": "",
          "description": "Relative path within each worktree where .claude-session file should be stored. Leave empty to use the worktree root."
        },
        "claudeLanes.claudeStatusPath": {
          "type": "string",
          "default": "",
          "description": "Relative path within each worktree where .claude-status file should be stored. Leave empty to use the worktree root."
        },
        "claudeLanes.useGlobalStorage": {
          "type": "boolean",
          "default": false,
          "description": "Store session tracking files (.claude-session, .claude-status) in VS Code's global storage instead of worktree directories. This keeps worktrees clean and supports multiple repositories."
        },
        "claudeLanes.baseBranch": {
          "type": "string",
          "default": "",
          "description": "The branch to compare against when viewing Git changes. Leave empty for auto-detection (checks origin/main, origin/master, main, master in order)."
        },
        "claudeLanes.includeUncommittedChanges": {
          "type": "boolean",
          "default": true,
          "description": "When viewing Git changes, include uncommitted local changes (staged and unstaged). If false, only shows committed changes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "prepare": "husky",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  }
}
